{% extends 'admin/base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="container_admin_order_info">
        <h2>Просмотр заказа #{{ order.id }}</h2>
        <h4>Информация о заказе</h4>
        <a href="{{ path('admin.order.edit', {'id': order.id }) }}" class="add_cat">
            Изменить статус заказа
        </a>
        <table id="admin_order_show" cellspacing="0">

            <tr>
                <td>Номер заказа :</td>
                <td>{{ order.id }}</td>
            </tr>

            <tr>
                <td>Имя клиента:</td>
                <td>{{ order.user.username }}</td>
            </tr>

            <tr>
                <td>Email клиента :</td>
                <td>{{ order.user.email }}</td>
            </tr>
            <tr>
                <td>ID клиента :</td>
                <td>{{ order.user.id }}</td>
            </tr>

            <tr>
                <th>Статус заказа :</th>
                <td>{{ order.status }}</td>
            </tr>

            <tr>
                <th>Сумма заказа :</th>
                <td>{{ order.sum }}</td>
            </tr>

        </table>

        <h3>Товары в заказе</h3>

        <table id="admin__order_product_list" cellspacing="0">

            <tr>
                <th>id товара</th>
                <th>Название</th>
                <th>Код товара</th>
                <th>Цена за шт.</th>
                <th>Цена</th>
                <th>Описание</th>
                <th>Заказано</th>
                <th>Доступно</th>
                <th>Дата</th>
                <th>Категория</th>
            </tr>

            {% for product in order.products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.code }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.sum }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.count }}</td>
                    <td>{{ product.availability }}</td>
                    <td>{{ product.created_at|date("Y-m-d H:i:s") }}</td>
                    <td>{{ product.category.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
