{% extends 'admin/base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="container_admin_order_info">
        <h2>Просмотр заказа #{{ order.id }}></h2>
        <h4>Информация о заказе</h4>

        <table id="admin_order_show" cellspacing="0">

            <tr>
                <td>Номер заказа :</td>
                <td>{{ order.id }}</td>
            </tr>

            <tr>
                <td>Имя клиента:</td>
                <td>{{ order.user.username }}</td>
            </tr>

            <tr>
                <td>Телефон клиента :</td>
                <td>{{ order.user.email }}</td>
            </tr>
            <tr>
                <td>ID клиента :</td>
                <td>{{ order.user.id }}</td>
            </tr>

            <tr>
                <th>Дата заказа :</th>
                <td>{{ order.createdAt }}</td>
            </tr>

            <tr>
                <th>Статус заказа :</th>
                <td>{{ order.status }}</td>
            </tr>

        </table>

        <h3>Товары в заказе</h3>

        <table id="admin__order_product_list" cellspacing="0">

            <tr>
                <th>ID товара</th>
                <th>Код товара</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Количество</th>
            </tr>

            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.code }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
